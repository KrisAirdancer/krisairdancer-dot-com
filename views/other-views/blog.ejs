    }
    
    .post-card-font p {
        font-family: 'Courier New', monospace;
        font-size: 14px;
    }
    
    .collapsible-content::-webkit-scrollbar {
        display: none;
    }
    
    .post-content {
        max-height: 100%;
        padding: 10px 10px 10px 10px;
        transition: max-height 1s;
    }

    /***** Image Styles *****/

    .post-content img {
        border: 1px solid var(--orange);
        border-radius: 5px;
        padding: 5px;
    }

    /* Post Captions */
    .caption {
        font-style: italic;
        font-size: smaller;
    }
